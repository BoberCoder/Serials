{% extends 'base.html.twig' %}
{% block body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="page-header">
                <h1>{{ serial.title }}</h1>
            </div>
        </div>

        <div class="row" id="post">
            <div class="col-md-7" style="padding-left: 0px" >
                <a href="#">
                    <img class="img-responsive" src="{{ serial.poster }}" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <p>{{ serial.description }}</p>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a type="button" class="btn btn-info btn-xs small-button" href="/edit/{{ serial.title|replace({' ': '_'}) }}">Редактировать сериал <span class="glyphicon glyphicon-pencil"></span></a>
                </div>
            </div>
            {% if episodes %}
                <div class="container">
                    <div class="row">
                        <hr>
                        <h2 class="text-center">Серии</h2>
                        {% for episode in episodes %}
                        <li class="list-group-item list-group-item-default center-block" style="width: 600px"><span class="glyphicon glyphicon-film"></span> {{ episode.title }}</li>
                        {% endfor %}
                        <br>
                    </div>
                </div>
            {% endif %}
        </div>

        <br>
        <div class="text-center">
            <a class="btn btn-primary " href="/"><span class="glyphicon glyphicon-chevron-left"></span>Назад</a>
        </div>

        <hr>
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>

        </footer>

    </div>
    <!-- /.container -->
{% endblock body %}