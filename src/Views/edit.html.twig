{% extends 'base.html.twig' %}
{% block body %}
    <div class="container well">
        <form class="col-sm-12 col-md-12" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-4 col-md-4">
                    <input type="hidden" name="serial_id" value="{{ id }}" />
                    <input type="hidden" name="existposter" value="{{ poster }}" />
                    <label>Название</label>
                    <input class="form-control" placeholder="Название сериала" type="text" name="title" value="{{ title }}">
                    <label>Постер</label>
                    <input class="form-control" type="file" name="poster">
                    <br/>
                    <img src="/{{ poster }}" height="200px" width="350px">
                </div>

                <div class="col-sm-8 col-md-8">
                    <div class="form-group">
                        <label>Короткое описание</label>
                        <textarea class="col-sm-3 col-md-3 form-control" name="description" rows="10">{{ description }}</textarea>
                    </div>
                </div>
            </div>
            <input class="btn btn-primary pull-right" type="submit" name="submit" value="Редактировать">
        </form>

        <div class="row">
            <h2 align="center">Добавьте серии</h2>
            <div id="episodecontent" class="container"></div>
            <hr>
            <form role="form" autocomplete="off" id="episode">
                <div class="entry input-group col-lg-12">
                    <div class="col-lg-4"><input class="form-control" id="title" name="title" type="text" /></div>
                    <div class="col-lg-4"><input class="form-control" id="description" name="description" type="text" /></div>
                    <div class="col-lg-2"></div>
                    <button class="btn btn-success btn-add" type="button" value="">
                        <span class="glyphicon glyphicon-plus"></span>
                        Добавить серию
                    </button>
                </div>
            </form>
    </div>
{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script src="/frontend/js/episodes.js"></script>
{% endblock javascripts %}