{% extends 'base.html.twig' %}
{% block body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="jumbotron">
                <h2>Сериалы для всех!</h2>
                <a class="btn btn-primary pull-right" href="/new">Добавить сериал <span class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>
        <!-- /.row -->
{% for serial in serials %}

        <!-- Project One -->
        <div class="row" id="post">
            <div class="col-md-7" style="padding-left: 0px ">
                <a href="#">
                    <img class="img-responsive" src="{{ serial.poster }}" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>{{ serial.title }}</h3>
                <p>{{ serial.description }}</p>
                <a class="btn btn-primary" href="/{{ serial.title|replace({' ': '_'}) }}">Детальнее<span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <!-- /.row -->

        <hr>

{% endfor %}

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->
{% endblock body %}