{% extends 'base.html.twig' %}
{% block body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="jumbotron">
                <h2>Сериалы для всех!</h2>
                <a class="btn btn-primary pull-right" href="/new">Добавить сериал <span class="glyphicon glyphicon-plus"></span></a>
            </div>
        </div>
        <!-- /.row -->
{% for serial in serials %}

        <!-- Project One -->
        <div class="row" id="post">
            <div class="col-md-7" style="padding-left: 0px ">
                <a href="#">
                    <img class="img-responsive" src="{{ serial.poster }}" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>{{ serial.title }}</h3>
                <p>{{ serial.description }}</p>
                <a class="btn btn-primary" href="/{{ serial.title|replace({' ': '_'}) }}">Детальнее<span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a type="button" class="btn btn-danger btn-xs small-button" href="/delete/{{ serial.title|replace({' ': '_'}) }}">Удалить сериал<span class="glyphicon glyphicon-trash"></span></a>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <hr>

{% endfor %}

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    {% for i in pagination['pages']|keys %}
                    <li>
                        {% if loop.first %}<a href="{{i-1}}">&laquo;</a>{% endif %}
                    </li>
                    <li>
                        <a href="{{ i }}">{{ i }}</a>
                    </li>
                    <li>
                        {% if loop.last %}<a href="{{i+1}}">&raquo;</a>{% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->
{% endblock body %}