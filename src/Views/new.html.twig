{% extends 'base.html.twig' %}
{% block body %}
    <div class="container well">
        <form class="col-sm-12 col-md-12" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-4 col-md-4">
                    <label>Название</label>
                    <input class="form-control" placeholder="Название сериала" type="text" name="title">
                    <label>Постер</label>
                    <input class="form-control" type="file" name="poster">
                </div>

                <div class="col-sm-8 col-md-8">
                    <div class="form-group">
                        <label>Короткое описание</label>
                        <textarea class="col-sm-3 col-md-3 form-control" name="description" rows="10"></textarea>
                    </div>
                </div>
            </div>
            <input class="btn btn-primary pull-right" type="submit" name="submit" value="Добавить">
        </form>
    </div>
{% endblock body %}